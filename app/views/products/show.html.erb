<p id="notice"><%= notice %></p>

  <section class="row">
    <div class="col-sm-6 img">
      <%= image_tag(@product.image_url, data_zoom_image: @product.image_url, class: "img-fluid img-zoom") %>
    </div>

    <section class="col-sm-6 products-info">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @product.price %>
      </p>

      <p>Average Rating: <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div> </p>

      <%= form_with(url: '/payments/create') do |form| %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
      
      <p>
        <%= link_to 'Edit', edit_product_path(@product) %> 
        <%= link_to 'Back', products_path %>
      </p>
      <%= render 'new_comment' %>
      <%= render 'comments' %>
      <%= will_paginate @comments %>

    </section>
    <!-- /col-sm-6 -->
  </section>



