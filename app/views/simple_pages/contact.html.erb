<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">
      <div class="form-group">
        <div class="control-label col-sm-12">      
          <%= form.label :name %>
        </div>
        <div class="col-sm-12">
          <%= form.text_field :name, class: "form-control", placeholder: "enter name", required: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-12"> 
          <%= form.label :email %>
        </div>
        <div class="col-sm-12">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter email", required: true,  type: "email", validates: :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-12"> 
          <%= form.label :message %>
        </div>
        <div class="col-sm-12">
          <%= form.text_area :message, class: "form-control", placeholder: "Enter message", rows: 5, required: true %>
        </div>
      </div>
</div>
<%= form.submit "Send", class: "form_label" %>
<% end %>



